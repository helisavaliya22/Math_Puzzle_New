<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Level_Board_Activity"
    android:background="@drawable/gameplaybackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/skip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/skip"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/level_board">
            <TextView
                android:id="@+id/level_display"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="LEVEL 1"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:fontFamily="serif-monospace"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/hint"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginHorizontal="20dp">
        <ImageView
            android:id="@+id/game_board"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="100dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.8"
        android:background="@color/black"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <EditText
                android:id="@+id/ans_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:background="@drawable/edit_text"
                android:layout_margin="10dp"/>

            <ImageView
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/delete"/>

            <TextView
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:text="SUBMIT"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="18dp"
                android:fontFamily="serif"
                android:textStyle="italic"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/n1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="1"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/n2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="2"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/n3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="3"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/n4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="4"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/n5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="5"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/n6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="6"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/n7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="7"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/n8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="8"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/n9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="@drawable/number_button"
                android:text="9"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/n0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/number_button"
                android:text="0"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20dp"/>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>